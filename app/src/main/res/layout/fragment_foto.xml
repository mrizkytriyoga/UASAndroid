<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.BeritaFragment">


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ViewFlipper
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:autoStart="true"
                android:flipInterval="3000">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_height="230dp"
                        android:src="@drawable/pict6" />

                    <TextView
                        android:layout_width="350dp"
                        android:layout_marginTop="190dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:paddingLeft="50dp"
                        android:layout_height="wrap_content"
                        android:text="All New Nissan Sentra Generasi Kedelapan, Ingin Tetap Laris"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginTop="35dp"
                        android:layout_height="230dp"
                        android:src="@drawable/pict7" />

                    <TextView
                        android:layout_width="350dp"
                        android:layout_marginTop="190dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:paddingLeft="50dp"
                        android:layout_height="wrap_content"
                        android:text="Wih Nissan Navara N-Trek Warrior Makin Gagah"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginTop="35dp"
                        android:layout_height="230dp"
                        android:src="@drawable/pict9" />

                    <TextView
                        android:layout_width="350dp"
                        android:layout_marginTop="190dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:paddingLeft="50dp"
                        android:layout_height="wrap_content"
                        android:text="Nissan Juke 2020 Akhirnya Rilis"/>

                </RelativeLayout>

            </ViewFlipper>

            <androidx.cardview.widget.CardView
                android:id="@+id/foto1"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/as1" />
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:text="Aston Martin Vanquish"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="125dp">

                </TextView>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/foto2"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/audi1" />
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:text="Audi RS5"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="125dp">

                </TextView>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/foto3"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/mercy1" />
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:text="Mercedes Benz AMG GT"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="125dp">

                </TextView>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/foto4"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginRight="20dp"
